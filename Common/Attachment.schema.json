{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "Attachment.schema.json",
    "title": "Attachment",
    "description": "Complements the description of an element (for instance a product) through video, pictures...", 
    "type": "object",

    "properties": {
        "id": {
            "type": "string", 
            "description": "Unique identifier for this particular attachment",
            "examples": [ "4aafacbd-11ff-4dc8-b445-305f2215715f", "2334bc59-726e-4d34-ab96-f50e0561412f" ]
        },
        "href": {
            "type": "string", 
            "format": "uri",
            "description": "URI for this Attachment",
            "examples": [ "http://host/Attachment/4aafacbd-11ff-4dc8-b445-305f2215715f" ]
        },
        "description": {
            "type": "string", 
            "description": "A narrative text describing the content of the attachment",
            "examples": [ "Photograph of the Product", "Explanation Video" ]
        },
        "type": {
            "type": "string", 
            "description": "Attachment type such as video, picture",
            "examples": [ "video", "picture" ]
        }, 
        "url": {
            "type": "string", 
            "format": "uri",
            "description": "Uniform Resource Locator, is a web page address (a subset of URI)",
            "examples": [ "http://host/Content/4aafacbd-11ff-4dc8-b445-305f2215715f" ]
        }
    },
    "allOf" : [
        { "$ref": "CommonComponents.schema.json/#polymorphicPattern" }
     ]
}